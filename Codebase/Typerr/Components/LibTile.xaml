<UserControl x:Class="Typerr.Components.LibTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Typerr.Components"
             mc:Ignorable="d" 
             x:Name="LibraryTile"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Width="300"
                    Height="150"
                    BorderThickness="1"
            BorderBrush="Black"
                    Margin="0,0,10,0">
        <!-->
        <Border.Background>
            <ImageBrush ImageSource="/Images/knox.jpg"/>
        </Border.Background>
        <-->
        <Border.Clip>
            <RectangleGeometry RadiusX="30"
                                       RadiusY="30"
                                       Rect="0,0,300,150"/>
        </Border.Clip>
        <Border Width="300"
                    Height="150"
                    BorderThickness="0"
                        Background="#88FFFFFF">

            <Border.Clip>
                <RectangleGeometry RadiusX="30"
                                       RadiusY="30"
                                       Rect="0,0,300,150"/>
            </Border.Clip>
            <Grid Width="300">
                <Button Width="300"
                    Height="150"
                    OpacityMask="#222"
                    BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="Border" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#88000000" TargetName="Border" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#a8000000" TargetName="Border" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Button.Background>
                        <LinearGradientBrush StartPoint="2,0" EndPoint="2,6">
                            <GradientStop Color="Transparent" Offset="0.0"/>
                            <GradientStop Color="#444444" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Clip>
                        <RectangleGeometry RadiusX="30"
                                       RadiusY="30"
                                       Rect="0,0,300,150"/>
                    </Button.Clip>

                    <Grid Width="300" Height="150">
                        <Grid.Background>
                            <LinearGradientBrush StartPoint="2,0" EndPoint="2,6">
                                <GradientStop Color="Transparent" Offset="0.0"/>
                                <GradientStop Color="#fdfdfd" Offset="1"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                        <StackPanel VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding Model.Title, ElementName=LibraryTile}"
                                   Foreground="Black"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="20,0,0,0" 
                                   Height="80"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Left" Width="260"
                                   />

                            <TextBlock Text="{Binding FooterInfo, ElementName=LibraryTile}"
                                   Foreground="Black"
                                   FontSize="14"
                                   Margin="20,10,20,10"
                                   />
                        </StackPanel>
                    </Grid>
                </Button>
            </Grid>
        </Border>
    </Border>
</UserControl>
