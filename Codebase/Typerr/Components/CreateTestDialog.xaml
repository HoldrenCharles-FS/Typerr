<Window x:Class="Typerr.Components.CreateTestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Typerr.Components"
        mc:Ignorable="d"
        WindowStyle="None"
        Topmost="True"
        WindowState="Normal"
        BorderBrush="Black"
        BorderThickness="4"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontSize="14">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" 
                   Content="Create a New Test"
                   FontWeight="Bold"
                   FontSize="24"/>
            <TextBox x:Name="TextAreaBox" 
                     Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>
