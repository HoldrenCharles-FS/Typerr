<UserControl x:Class="Typerr.Components.NavPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Typerr.Components"
             mc:Ignorable="d">
    <StackPanel>
        <!--App Title-->
        <TextBlock Text="Typerr"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="30,20,0,52"
                               Foreground="White"
                               FontSize="28"/>
        <!--Home Radio Button-->
        <RadioButton Content="Home"
                                 Height="50"
                                 Foreground="White"
                                 FontSize="14"
                                 IsChecked="True"
                                 Command="{Binding GoToHomeCommand}"
                                 Style="{StaticResource MenuButtonTheme}"/>
        <!--Library Radio Button-->
        <RadioButton Content="Library"
                                 Height="50"
                                 Foreground="White"
                                 FontSize="14"
                                 Command="{Binding GoToLibraryCommand}"
                                 Style="{StaticResource MenuButtonTheme}"/>
        <!--Subscriptions Radio Button-->
        <RadioButton Content="Subscriptions"
                                 Height="50"
                                 IsEnabled="False"
                                 Foreground="#bbb"
                                 FontSize="14"
                                 Style="{StaticResource MenuButtonTheme}"/>

    </StackPanel>
</UserControl>
